<body>
  <div class="container">
    <h2>Cadastro de Pesquisa</h2>
    <form id="formPesquisa">
      <label for="idPesquisa">Número da Pesquisa:</label>
      <input type="text" id="idPesquisa" name="idPesquisa" required>

      <label for="dataInicio">Data de Início:</label>
      <input type="date" id="dataInicio" name="dataInicio" required>

      <label for="dataTermino">Data de Término:</label>
      <input type="date" id="dataTermino" name="dataTermino" required>

      <button type="submit">Salvar</button>
    </form>
  </div>

  <script>
    document.getElementById('formPesquisa').addEventListener('submit', function(e) {
      e.preventDefault();
      const id = document.getElementById('idPesquisa').value;
      const inicio = document.getElementById('dataInicio').value;
      const termino = document.getElementById('dataTermino').value;

      // Simulação de envio
      console.log("Pesquisa cadastrada:", { id, inicio, termino });
      alert("Pesquisa cadastrada com sucesso!");
      this.reset();
    });
  </script>
