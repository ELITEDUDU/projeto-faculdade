<body>
  <div class="container">
    <h2>Registro de Formulário</h2>
    <form id="formRespostas">
      <label for="idPesquisa">Pesquisa:</label>
      <select id="idPesquisa" name="idPesquisa" required>
        <option value="">Selecione...</option>
        <option value="1">Pesquisa 1</option>
        <option value="2">Pesquisa 2</option>
      </select>

      <label for="cpf">CPF do Entrevistado:</label>
      <input type="text" id="cpf" name="cpf" required>

      <label for="dataPreenchimento">Data de Preenchimento:</label>
      <input type="date" id="dataPreenchimento" name="dataPreenchimento" required>

      <div class="pergunta">
        <label for="resposta1">1. Qual sua idade?</label>
        <input type="text" id="resposta1" name="resposta1" required>
      </div>

      <div class="pergunta">
        <label for="resposta2">2. Qual sua ocupação?</label>
        <input type="text" id="resposta2" name="resposta2" required>
      </div>

      <div class="pergunta">
        <label for="resposta3">3. Você já participou de pesquisas anteriores?</label>
        <select id="resposta3" name="resposta3" required>
          <option value="">Selecione...</option>
          <option value="Sim">Sim</option>
          <option value="Não">Não</option>
        </select>
      </div>

      <button type="submit">Salvar Formulário</button>
    </form>
  </div>

  <script>
    document.getElementById('formRespostas').addEventListener('submit', function(e) {
      e.preventDefault();
      const dados = {
        pesquisa: document.getElementById('idPesquisa').value,
        cpf: document.getElementById('cpf').value,
        data: document.getElementById('dataPreenchimento').value,
        respostas: [
          document.getElementById('resposta1').value,
          document.getElementById('resposta2').value,
          document.getElementById('resposta3').value
        ]
      };

      console.log("Formulário registrado:", dados);
      alert("Formulário salvo com sucesso!");
      this.reset();
    });
  </script>
