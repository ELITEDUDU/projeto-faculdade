    <form id="formPergunta">
      <label for="idPesquisa">Pesquisa:</label>
      <select id="idPesquisa" name="idPesquisa" required>
        <option value="">Selecione...</option>
        <option value="1">Pesquisa 1</option>
        <option value="2">Pesquisa 2</option>
        <!-- Adicione dinamicamente as pesquisas reais -->
      </select>

      <label for="numero">Número da Pergunta:</label>
      <input type="text" id="numero" name="numero" required>

      <label for="enunciado">Enunciado:</label>
      <textarea id="enunciado" name="enunciado" rows="4" required></textarea>

      <button type="submit">Salvar Pergunta</button>
    </form>
  </div>

  <script>
    document.getElementById('formPergunta').addEventListener('submit', function(e) {
      e.preventDefault();
      const pesquisa = document.getElementById('idPesquisa').value;
      const numero = document.getElementById('numero').value;
      const enunciado = document.getElementById('enunciado').value;

      // Simulação de envio
      console.log("Pergunta cadastrada:", { pesquisa, numero, enunciado });
      alert("Pergunta cadastrada com sucesso!");
      this.reset();
    });
  </script>
